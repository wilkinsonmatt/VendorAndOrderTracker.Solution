@{
  Layout = "_Layout";
}

@using Tracker.Models;

<h1>Vendors:</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors currently on file</h3>
} 

@foreach (Vendor vendor in Model)
{
  <br>
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  <h5>@vendor.Description </h5>
}

<p><a href='/'>Back to the home/splash page</a></p>